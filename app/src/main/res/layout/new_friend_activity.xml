<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/EDEDED"
    android:orientation="vertical"
    tools:context=".Activity.NewFriendActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:background="@color/EDEDED">

        <ImageButton
            android:id="@+id/FriendBack_image_button"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:background="@mipmap/back"
            android:contentDescription="@string/NULL"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/新朋友"
            android:textColor="@color/_1A1A1A"
            android:textSize="@dimen/dimen_20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <ImageView
            android:id="@+id/AddFriend_imageview"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:clickable="true"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:contentDescription="@string/NULL"
            android:focusable="true"
            android:src="@mipmap/add_friend"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/D9D9D9"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/NewFriend_recyclerview"
        android:layout_width="match_parent"
        android:background="@color/EDEDED"
        android:layout_height="wrap_content"
        />

</LinearLayout>